<body>
    <div id="root"></div>

    <script type="text/babel">
        function AuthApp() {
            const [isLoggedIn, setIsLoggedIn] = React.useState(false);
            const [email, setEmail] = React.useState('');
            const [password, setPassword] = React.useState('');
            const [loading, setLoading] = React.useState(false);

            const handleLogin = (e) => {
                e.preventDefault();
                setLoading(true);
                // Simulate JWT Auth
                setTimeout(() => {
                    setLoading(false);
                    setIsLoggedIn(true);
                }, 1500);
            };

            if (isLoggedIn) {
                return (
                    <div className="auth-card dashboard">
                        <div className="user-icon">ðŸ‘¤</div>
                        <h2>Welcome, Developer!</h2>
                        <p>Token Status: <span style={{color: '#10b981'}}>Active (JWT Secured)</span></p>
                        <div style={{background: '#0f172a', padding: '15px', borderRadius: '12px', textAlign: 'left', marginBottom: '20px'}}>
                            <code style={{fontSize: '12px', color: '#38bdf8'}}>// User Data fetched from MongoDB<br/>name: "Satyam Kumar"<br/>role: "Full-Stack Dev"</code>
                        </div>
                        <button className="login-btn" onClick={() => window.location.href="index.html"}>Go to Main Site</button>
                    </div>
                );
            }

            return (
                <div className="auth-card">
                    <h2>Secure Login</h2>
                    <p>Enter credentials to access dashboard</p>
                    <form onSubmit={handleLogin}>
                        <input type="email" placeholder="Email (Try any)" className="input-box" required value={email} onChange={(e)=>setEmail(e.target.value)} />
                        <input type="password" placeholder="Password" className="input-box" required value={password} onChange={(e)=>setPassword(e.target.value)} />
                        <button type="submit" className="login-btn">
                            {loading ? "Verifying..." : "LOGIN"}
                        </button>
                    </form>
                    <div style={{marginTop: '20px', fontSize: '12px', color: '#64748b'}}>
                        Bcrypt Hashing & JWT Protection Demo
                    </div>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<AuthApp />);
    </script>
</body>
</html>
