<body>
    <div id="root"></div>
    <script type="text/babel">
        function AuthApp() {
            const [isLoggedIn, setIsLoggedIn] = React.useState(false);
            const [loading, setLoading] = React.useState(false);

            const toggleAuth = (status) => {
                setLoading(true);
                setTimeout(() => {
                    setIsLoggedIn(status);
                    setLoading(false);
                }, 1000); // 1 second ka delay asli feel ke liye
            };

            if (isLoggedIn) {
                return (
                    <div className="auth-card dashboard-ui">
                        <div style={{fontSize: '50px', marginBottom: '10px'}}>üë§</div>
                        <h2 style={{color: '#38bdf8'}}>Welcome, Admin!</h2>
                        <p style={{fontSize: '14px', color: '#94a3b8'}}>Status: <span style={{color: '#10b981'}}>‚óè Authenticated</span></p>
                        <div style={{background: '#0f172a', padding: '15px', borderRadius: '10px', textAlign: 'left', marginTop: '15px', fontSize: '13px'}}>
                           <code style={{color: '#38bdf8'}}>// Secret Token:<br/>JWT_8009_SATYAM_SUCCESS</code>
                        </div>
                        
                        {/* LOGOUT BUTTON YAHAN HAI */}
                        <button className="logout-btn" onClick={() => toggleAuth(false)}>
                            {loading ? "Logging out..." : "SECURE LOGOUT"}
                        </button>
                        
                        <p onClick={() => window.location.href="index.html"} style={{cursor: 'pointer', fontSize: '12px', marginTop: '20px', color: '#64748b'}}>‚Üê Return to Home</p>
                    </div>
                );
            }

            return (
                <div className="auth-card">
                    <h2 style={{color: '#38bdf8'}}>Secure Login</h2>
                    <p style={{fontSize: '13px', color: '#94a3b8'}}>React State Management Demo</p>
                    <form onSubmit={(e) => { e.preventDefault(); toggleAuth(true); }}>
                        <input type="email" placeholder="Email" className="input-box" required />
                        <input type="password" placeholder="Password" className="input-box" required />
                        
                        {/* LOGIN BUTTON YAHAN HAI */}
                        <button type="submit" className="login-btn">
                            {loading ? "Authenticating..." : "LOGIN"}
                        </button>
                    </form>
                </div>
            );
        }
        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<AuthApp />);
    </script>
</body>
</html>
