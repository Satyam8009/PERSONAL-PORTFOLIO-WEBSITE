<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure React Auth | Satyam</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Poppins', sans-serif; background: #0f172a; color: white; display: flex; justify-content: center; align-items: center; min-height: 100vh; margin: 0; }
        .auth-card { background: #1e293b; padding: 30px; border-radius: 20px; width: 90%; max-width: 350px; text-align: center; border: 1px solid #334155; box-shadow: 0 10px 30px rgba(0,0,0,0.5); }
        .input-box { width: 100%; padding: 12px; margin: 10px 0; border-radius: 8px; border: 1px solid #334155; background: #0f172a; color: white; box-sizing: border-box; outline: none; }
        .input-box:focus { border-color: #38bdf8; }
        .login-btn { width: 100%; padding: 12px; background: #38bdf8; color: #0f172a; border: none; border-radius: 8px; font-weight: bold; cursor: pointer; margin-top: 10px; transition: 0.3s; }
        .logout-btn { width: 100%; padding: 10px; background: #ef4444; color: white; border: none; border-radius: 8px; font-weight: bold; cursor: pointer; margin-top: 20px; }
        .dashboard { animation: slideIn 0.4s ease-out; }
        @keyframes slideIn { from { opacity: 0; transform: scale(0.9); } to { opacity: 1; transform: scale(1); } }
        .status-dot { height: 10px; width: 10px; background-color: #10b981; border-radius: 50%; display: inline-block; margin-right: 5px; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        function AuthApp() {
            const [isLoggedIn, setIsLoggedIn] = React.useState(false);
            const [loading, setLoading] = React.useState(false);
            const [user, setUser] = React.useState({ email: '' });

            // Login Function
            const handleLogin = (e) => {
                e.preventDefault();
                setLoading(true);
                setTimeout(() => {
                    setLoading(false);
                    setIsLoggedIn(true);
                }, 1200);
            };

            // Logout Function
            const handleLogout = () => {
                setLoading(true);
                setTimeout(() => {
                    setIsLoggedIn(false);
                    setLoading(false);
                    setUser({ email: '' });
                }, 800);
            };

            if (isLoggedIn) {
                return (
                    <div className="auth-card dashboard">
                        <div style={{fontSize: '50px'}}>üë§</div>
                        <h2 style={{margin: '10px 0'}}>User Dashboard</h2>
                        <p style={{color: '#94a3b8', fontSize: '14px'}}><span className="status-dot"></span> Session: Active</p>
                        
                        <div style={{background: '#0f172a', padding: '15px', borderRadius: '10px', textAlign: 'left', marginTop: '15px'}}>
                            <div style={{color: '#38bdf8', fontSize: '12px', fontWeight: 'bold'}}>MERN STACK DATA:</div>
                            <div style={{fontSize: '13px', marginTop: '5px'}}>Role: Full-Stack Developer</div>
                            <div style={{fontSize: '13px'}}>Location: Ayodhya, India</div>
                        </div>

                        <button className="logout-btn" onClick={handleLogout}>
                            {loading ? "Logging out..." : "LOGOUT"}
                        </button>
                        
                        <p onClick={() => window.location.href="index.html"} style={{cursor: 'pointer', fontSize: '12px', marginTop: '15px', color: '#64748b'}}>‚Üê Back to Portfolio</p>
                    </div>
                );
            }

            return (
                <div className="auth-card">
                    <h2 style={{color: '#38bdf8'}}>Secure Login</h2>
                    <p style={{fontSize: '13px', color: '#94a3b8'}}>Testing MERN Authentication Flow</p>
                    <form onSubmit={handleLogin}>
                        <input 
                            type="email" 
                            placeholder="Email Address" 
                            className="input-box" 
                            required 
                            onChange={(e) => setUser({...user, email: e.target.value})}
                        />
                        <input type="password" placeholder="Password" className="input-box" required />
                        <button type="submit" className="login-btn">
                            {loading ? "Authenticating..." : "LOGIN"}
                        </button>
                    </form>
                    <div style={{marginTop: '20px', fontSize: '11px', color: '#475569'}}>
                        Protected by JWT & Bcrypt Demo Logic
                    </div>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<AuthApp />);
    </script>
</body>
</html>
