<!DOCTYPE html>
<html>
<head>
    <title>Secure Auth | Satyam</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <style>
        body { margin: 0; background: #0f172a; color: white; font-family: sans-serif; display: flex; justify-content: center; align-items: center; height: 100vh; }
        .box { background: #1e293b; padding: 40px; border-radius: 20px; text-align: center; width: 300px; border: 1px solid #334155; }
        .in { width: 100%; padding: 10px; margin: 10px 0; border-radius: 5px; border: none; box-sizing: border-box; }
        .btn-l { width: 100%; padding: 10px; background: #22c55e; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer; }
        .btn-o { width: 100%; padding: 10px; background: #ef4444; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer; margin-top: 20px; }
    </style>
</head>
<body>
    <div id="root"></div>
    <script type="text/babel">
        function Auth() {
            const [isLogged, setIsLogged] = React.useState(false);

            if (isLogged) {
                return (
                    <div className="box">
                        <h2 style={{color: '#22c55e'}}>Logged In! âœ…</h2>
                        <p>User: Satyam Admin</p>
                        <button className="btn-o" onClick={() => setIsLogged(false)}>LOGOUT</button>
                    </div>
                );
            }

            return (
                <div className="box">
                    <h2>Secure Login</h2>
                    <form onSubmit={(e) => { e.preventDefault(); setIsLogged(true); }}>
                        <input className="in" type="email" placeholder="Email" required />
                        <input className="in" type="password" placeholder="Password" required />
                        <button className="btn-l" type="submit">LOGIN</button>
                    </form>
                </div>
            );
        }
        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<Auth />);
    </script>
</body>
</html>
