<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Auth | Satyam</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <style>
        body { margin: 0; background: #0f172a; color: white; font-family: sans-serif; display: flex; justify-content: center; align-items: center; min-height: 100vh; }
        .box { background: #1e293b; padding: 30px; border-radius: 15px; width: 300px; text-align: center; border: 1px solid #334155; }
        .in { width: 100%; padding: 10px; margin: 10px 0; border-radius: 5px; border: 1px solid #334155; background: #0f172a; color: white; box-sizing: border-box; }
        .btn-blue { width: 100%; padding: 10px; background: #38bdf8; color: #0f172a; border: none; border-radius: 5px; font-weight: bold; cursor: pointer; }
        .btn-red { width: 100%; padding: 10px; background: #ef4444; color: white; border: none; border-radius: 5px; font-weight: bold; cursor: pointer; margin-top: 15px; }
        .link { color: #38bdf8; cursor: pointer; font-size: 12px; display: block; margin-top: 15px; text-decoration: underline; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState } = React;

        function AuthApp() {
            const [view, setView] = useState('login'); // login, signup, dashboard

            if (view === 'dashboard') {
                return (
                    <div className="box">
                        <h2 style={{color:'#22c55e'}}>✅ Welcome!</h2>
                        <p>User Dashboard Active</p>
                        <button className="btn-red" onClick={() => setView('login')}>LOGOUT</button>
                    </div>
                );
            }

            if (view === 'signup') {
                return (
                    <div className="box">
                        <h2>Create Account</h2>
                        <form onSubmit={(e) => { e.preventDefault(); setView('dashboard'); }}>
                            <input className="in" type="text" placeholder="Full Name" required />
                            <input className="in" type="email" placeholder="Email" required />
                            <input className="in" type="password" placeholder="Password" required />
                            <button className="btn-blue" type="submit">SIGN UP</button>
                        </form>
                        <span className="link" onClick={() => setView('login')}>Already have an account? Login</span>
                    </div>
                );
            }

            return (
                <div className="box">
                    <h2>Login</h2>
                    <form onSubmit={(e) => { e.preventDefault(); setView('dashboard'); }}>
                        <input className="in" type="email" placeholder="Email" required />
                        <input className="in" type="password" placeholder="Password" required />
                        <button className="btn-blue" type="submit">LOGIN</button>
                    </form>
                    <span className="link" onClick={() => setView('signup')}>New user? Create Account</span>
                    <br/>
                    <a href="index.html" style={{color:'#64748b', fontSize:'11px', textDecoration:'none'}}>← Back to Portfolio</a>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<AuthApp />);
    </script>
</body>
</html>
